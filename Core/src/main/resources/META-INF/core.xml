<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="dk.sdu.mmmi.Game">
    <implementation class="dk.sdu.mmmi.Game"/>

    <reference bind="addPostEntityProcessingService" cardinality="0..n"
               interface="dk.sdu.mmmi.common.services.IPostEntityProcessingService"
               name="IPostEntityProcessingService" policy="dynamic" unbind="removePostEntityProcessingService"/>

    <reference bind="addEntityProcessingService" cardinality="0..n"
               interface="dk.sdu.mmmi.common.services.IEntityProcessingService"
               name="IEntityProcessingService" policy="dynamic" unbind="removeEntityProcessingService"/>

    <reference bind="addGamePluginService" cardinality="0..n"
               interface="dk.sdu.mmmi.common.services.IGamePluginService"
               name="IGamePluginService" policy="dynamic" unbind="removeGamePluginService"/>
    
    <reference bind="addHelp" cardinality="0..n"
               interface="dk.sdu.mmmi.common.services.IHelp"
               name="IHelp" policy="dynamic" unbind="removeHelp"/>
    
    <reference bind="addGameSignal" cardinality="0..n"
               interface="dk.sdu.mmmi.common.services.IGameSignal"
               name="IGameSignal" policy="dynamic" unbind="removeGameSignal"/>
</scr:component>

<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="dk.sdu.mmmi.Menu">
    <implementation class="dk.sdu.mmmi.Menu"/>
    <service>
        <provide interface="dk.sdu.mmmi.common.services.IGameSignal"/>
    </service>
</scr:component>